        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:adjustViewBounds="false"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/btnCadastroJogadorT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Jogador" />

        <Button
            android:id="@+id/btnGerarRodadaT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Rodada" />

        <Button
            android:id="@+id/btnTabelaT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tabela" />

        <Button
            android:id="@+id/btnArtilhariaT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artilharia" />

        <Button
            android:id="@+id/btnRecomecarApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recomeÃ§ar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/btnSairT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sair" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
